@model UtilityCreateViewModel

@{
    ViewData["Title"] = "Create Utility";
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>
                Add utility
            </h4>
            <hr />
            <div class="form-group">
                <input type="hidden" asp-for="BuildingId"/>
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" min="0.00" step="0.01" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-check">
                <label class="form-check-label" asp-for="Routine"></label>
                Monthly <input asp-for="Routine" class="form-check-input" type="radio" value="0">
                Yearly <input asp-for="Routine" class="form-check-input" type="radio" value="1">
            </div>
            <div class="form-check">
                <label class="form-check-label" asp-for="IsSubscribable"></label>
                <input asp-for="IsSubscribable" class="form-check-input" type="checkbox">
                <span asp-validation-for="IsSubscribable" class="text-danger"></span>
            </div>
            <div class="form-check">
                <label class="form-check-label form-inline" asp-for="IsPerResident"></label>
                <input asp-for="IsPerResident" class="form-check-input" type="checkbox">
                <span asp-validation-for="IsPerResident" class="text-danger"></span>
                (default is per apartment)
            </div>

            <button type="submit" class="btn btn-info">Add</button>
            <a class="btn btn-default" asp-area="Manager" asp-controller="Utilities" asp-action="Index" asp-route-id=@Model.BuildingId>Cancel</a>
        </form>
    </div>
</div>
